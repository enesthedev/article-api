{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "incremental": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "baseUrl": ".",
    "types": ["reflect-metadata"],
    "lib": ["es2020"],
    "paths": {
      "@project/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src/**/**.ts",
    "tests/**/**.ts"
  ],
  "exclude": ["node_modules", "dist/**", "*.md"]
}
